# ============================================
# Bunoraa E-Commerce Platform
# Production Environment Variables
# ============================================

# Frontend (Next.js) + API
NEXT_PUBLIC_API_BASE_URL=/api/v1
NEXT_INTERNAL_API_BASE_URL=https://api.bunoraa.com/api/v1/
NEXT_PUBLIC_MEDIA_BASE_URL=https://media.bunoraa.com
NEXT_PUBLIC_SITE_URL=https://bunoraa.com
NEXT_PUBLIC_WS_BASE_URL=wss://api.bunoraa.com
NEXT_PUBLIC_WS_ENABLED=true
NEXT_DISABLE_PRERENDER=true
NEXT_DISABLE_BUILD_PRERENDER=true
NEXT_IMAGE_UNOPTIMIZED=true
NEXT_FRONTEND_ORIGIN=https://bunoraa.com
NEXT_API_PROXY_TARGET=https://api.bunoraa.com

# Django Core
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=CHANGE_ME
DJANGO_SETTINGS_MODULE=core.settings.production
ALLOWED_HOSTS=bunoraa.com,www.bunoraa.com,api.bunoraa.com,bunoraa.onrender.com
SITE_URL=https://bunoraa.com
CORS_ALLOWED_ORIGINS=https://bunoraa.com,https://www.bunoraa.com,https://api.bunoraa.com,https://media.bunoraa.com
CSRF_TRUSTED_ORIGINS=https://bunoraa.com,https://www.bunoraa.com
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME

# Redis / Celery / Channels
REDIS_URL=redis://HOST:6379/0
CHANNEL_LAYERS_REDIS_URL=redis://HOST:6379/2
CELERY_BROKER_URL=redis://HOST:6379/1
CELERY_RESULT_BACKEND=redis://HOST:6379/3
ML_REDIS_URL=redis://HOST:6379/4

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
SENDGRID_API_KEY=CHANGE_ME
DEFAULT_FROM_EMAIL=noreply@bunoraa.com
DEFAULT_FROM_NAME=Bunoraa
DEFAULT_REPLY_TO=support@bunoraa.com

# Storage (S3 / R2)
USE_S3=True
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_STORAGE_BUCKET_NAME=bunoraa
AWS_S3_REGION_NAME=us-east-1
AWS_S3_ENDPOINT_URL=https://<R2_ACCOUNT_ID>.r2.cloudflarestorage.com
AWS_S3_CUSTOM_DOMAIN=media.bunoraa.com
AWS_DEFAULT_ACL=None
AWS_S3_CACHE_CONTROL=max-age=86400
MEDIA_URL=https://media.bunoraa.com/

R2_ACCOUNT_ID=CHANGE_ME
R2_BUCKET_NAME=bunoraa
R2_CUSTOM_DOMAIN=media.bunoraa.com
R2_BACKUP_BUCKET=bunoraa-backups

# Auth / OAuth
GOOGLE_CLIENT_ID=CHANGE_ME
GOOGLE_CLIENT_SECRET=CHANGE_ME
GOOGLE_REDIRECT_URI=https://bunoraa.com/oauth/complete/google-oauth2/
SOCIAL_AUTH_LOGIN_REDIRECT_URL=/account/oauth/callback/
SOCIAL_AUTH_REDIRECT_IS_HTTPS=True

# Monitoring
SENTRY_DSN=CHANGE_ME

# Payments
STRIPE_PUBLIC_KEY=CHANGE_ME
STRIPE_SECRET_KEY=CHANGE_ME
STRIPE_WEBHOOK_SECRET=CHANGE_ME
SSLCOMMERZ_STORE_ID=CHANGE_ME
SSLCOMMERZ_STORE_PASSWORD=CHANGE_ME
SSLCOMMERZ_IS_SANDBOX=False
BKASH_APP_KEY=CHANGE_ME
BKASH_APP_SECRET=CHANGE_ME
BKASH_USERNAME=CHANGE_ME
BKASH_PASSWORD=CHANGE_ME
BKASH_IS_SANDBOX=False
NAGAD_MERCHANT_ID=CHANGE_ME
NAGAD_PUBLIC_KEY=CHANGE_ME
NAGAD_PRIVATE_KEY=CHANGE_ME
NAGAD_IS_SANDBOX=False

# SMS (ssl_wireless | bulksmsbd | infobip)
SMS_PROVIDER=ssl_wireless
SSL_WIRELESS_SID=CHANGE_ME
SSL_WIRELESS_API_KEY=CHANGE_ME
SSL_WIRELESS_SENDER_ID=BUNORAA

# SEO / Search Console
SERPAPI_KEY=CHANGE_ME
GSC_SERVICE_ACCOUNT_FILE=/path/to/gsc-service-account.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gsc-service-account.json
GSC_SITE_URL=https://bunoraa.com

# Currency / Exchange Rates
EXCHANGERATE_API_KEY=CHANGE_ME
EXCHANGERATESAPI_KEY=CHANGE_ME
OPENEXCHANGE_RATES_API_KEY=CHANGE_ME
FIXER_API_KEY=CHANGE_ME

# AI / Chat
OPENAI_API_KEY=CHANGE_ME

# Feature Flags / ML
ML_ENABLED=False
PRERENDER_ENABLED=False

# Gunicorn (low-memory defaults)
GUNICORN_WORKERS=1
GUNICORN_THREADS=1
GUNICORN_WORKER_CLASS=gthread
GUNICORN_TIMEOUT=45
GUNICORN_GRACEFUL_TIMEOUT=20
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=200
GUNICORN_MAX_REQUESTS_JITTER=50

# Env Registry
ENV_REGISTRY_AUTOSEED=True
ENV_REGISTRY_AUTOSYNC_RUNTIME=True
ENV_REGISTRY_AUTOEXPORT=False
